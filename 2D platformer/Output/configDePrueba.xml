<!-- Config file for the game -->
<config>
  <app>
    <title>Game Development Testbed</title>
    <organization>UPC</organization>
  </app>

  <renderer>
    <vsync value="false"/>  <!--pues hace q los frames se sincronicen con los de la pantalla cambiar a true porfi-->
  </renderer>
	
  <player>
	  <physics speed="5" jumpforce="5"/>
	  <sprites walk="" jump="" die=""/>
  </player>
	
  <window>
    <resolution width="1600" height="480" scale="1"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <!-- L03: Added maps folder as config option -->
  <map>
    <folder>Assets/maps/</folder>
  </map>
	
</config>